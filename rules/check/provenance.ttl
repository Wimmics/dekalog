@prefix earl: <http://www.w3.org/ns/earl#> .
@prefix kgi: <http://ns.inria.fr/kg/index#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix prov: <http://www.w3.org/ns/prov#> .

kgi:provenanceExtractionShape rdf:type sh:NodeShape ,
        earl:TestCase ;
    sh:targetClass void:Dataset ;
    sh:name "Provenance information"@en ;
	sh:description "We need information about the authors, the licensing and the creation process." ;
    # Who ?
    sh:or (
		[ sh:property [
    		sh:path dcterms:creator ;
    		sh:minCount 1 ;
	       ]  ]
		[ sh:property [
    		sh:path  dcterms:contributor ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  dcterms:publisher ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  prov:wasAttributedTo ;
    		sh:minCount 1 ;
	       ] ]
    ) ;
    # What ?
    sh:or (
		[ sh:property [
    		sh:path  dcterms:licence ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  dcterms:conformsTo ;
    		sh:minCount 1 ;
	       ] ]
    ) ;
    # How ?
    sh:or (
		[ sh:property [
    		sh:path  dcterms:created ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  dcterms:modified ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  prov:wasGeneratedAtTime ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  dcterms:issued ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  dcterms:source ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  prov:wasDerivedFrom ;
    		sh:minCount 1 ;
	       ] ]
		[ sh:property [
    		sh:path  dcterms:format ;
    		sh:minCount 1 ;
	       ] ]
    ) .
