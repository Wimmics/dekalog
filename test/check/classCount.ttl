@prefix dkg: <http://ns.inria.fr/kgindex#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

dkg:countClassShape a sh:NodeShape ;
    sh:targetNode dkg:dummyTarget ;
    sh:sparql [
    		rdf:type sh:SPARQLConstraint ;
    		sh:message "There are as many classes as expected." ;
            sh:select """PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
                PREFIX owl: <http://www.w3.org/2002/07/owl#>
                SELECT $this (count(?c) AS ?value)
                $FROM
                WHERE {
                    SELECT DISTINCT ?c
                    WHERE {
                        ?s a ?c .
                    }
                }
                GROUP BY $this
                HAVING ( ?value != $extractedValue ) """
        ] .
